<!-- A DrawerLayout is intended to be used as the top-level content view using match_parent for both width and height to consume the full space available. -->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- As the main content view, the view below consumes the entire
         space available using match_parent in both dimensions. -->
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_bg_main"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <EditText
            android:id="@+id/editTextVin"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:background="#F8BBD0"
            android:ems="10"
            android:inputType="number"
            android:textSize="14sp"
            app:layout_constraintRight_toLeftOf="@+id/textView11"
            app:layout_constraintTop_toBottomOf="@+id/editTextPower" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="85dp"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:background="#EA80FC"
            android:elegantTextHeight="false"
            android:paddingEnd="3dp"
            android:text="כניסה"
            android:textAlignment="textStart"
            android:textColor="@color/abc_input_method_navigation_guard"
            android:textIsSelectable="false"
            android:textSize="18sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <Spinner
            android:id="@+id/editTextType"
            android:layout_width="95dp"
            android:layout_height="25dp"
            android:layout_marginLeft="36dp"
            android:background="#F8BBD0"
            android:dropDownWidth="match_parent"
            android:ems="10"
            android:inputType="textPersonName"
            android:popupBackground="#F8BBD0"
            android:selectAllOnFocus="false"
            android:tag="3"
            android:textSize="14sp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="@+id/editTextVa"
            app:layout_constraintRight_toLeftOf="@+id/textView10"
            app:layout_constraintTop_toTopOf="@+id/textView10" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="90dp"
            android:layout_height="25dp"
            android:layout_marginRight="24dp"
            android:background="#EA80FC"
            android:elegantTextHeight="false"
            android:gravity="end"
            android:paddingEnd="3dp"
            android:text="VA"
            android:textColor="@color/abc_input_method_navigation_guard"
            android:textDirection="rtl"
            android:textIsSelectable="false"
            android:textSize="18sp"
            app:layout_constraintRight_toLeftOf="@+id/editTextVoltage"
            app:layout_constraintTop_toTopOf="@+id/textView3" />

        <EditText
            android:id="@+id/editTextVa"
            android:layout_width="95dp"
            android:layout_height="25dp"
            android:layout_marginTop="-36dp"
            android:background="#F8BBD0"
            android:ems="10"
            android:inputType="text"
            android:tag="2"
            android:textSize="14sp"
            app:layout_constraintRight_toLeftOf="@+id/textView9"
            app:layout_constraintTop_toTopOf="@+id/textView9" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="90dp"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:background="#EA80FC"
            android:elegantTextHeight="false"
            android:paddingEnd="3dp"
            android:text="סוג אלפסק"
            android:textColor="@color/abc_input_method_navigation_guard"
            android:textIsSelectable="false"
            android:textSize="18sp"
            app:layout_constraintRight_toRightOf="@+id/textView9"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <Spinner
            android:id="@+id/editTextDim"
            android:layout_width="95dp"
            android:layout_height="25dp"
            android:background="#F8BBD0"
            android:dropDownWidth="match_parent"
            android:ems="10"
            android:inputType="textPersonName"
            android:popupBackground="#F8BBD0"
            android:textSize="14sp"
            app:layout_constraintRight_toLeftOf="@+id/textView13"
            app:layout_constraintTop_toTopOf="@+id/textView13" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="90dp"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:background="#EA80FC"
            android:elegantTextHeight="false"
            android:paddingEnd="3dp"
            android:text="מס פאזות"
            android:textAlignment="textStart"
            android:textColor="@color/abc_input_method_navigation_guard"
            android:textIsSelectable="false"
            android:textSize="18sp"
            app:layout_constraintRight_toRightOf="@+id/textView10"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />

        <Spinner
            android:id="@+id/editTextPhase"
            android:layout_width="95dp"
            android:layout_height="25dp"
            android:background="#F8BBD0"
            android:dropDownWidth="match_parent"
            android:ems="10"
            android:inputType="text"
            android:popupBackground="#F8BBD0"
            android:tag="5"
            android:textSize="14sp"
            app:layout_constraintHorizontal_bias="0.48"
            app:layout_constraintLeft_toLeftOf="@+id/editTextType"
            app:layout_constraintRight_toLeftOf="@+id/textView12"
            app:layout_constraintTop_toTopOf="@+id/textView12" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="90dp"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:background="#EA80FC"
            android:elegantTextHeight="false"
            android:paddingEnd="3dp"
            android:text="סוג דימור"
            android:textAlignment="textStart"
            android:textColor="@color/abc_input_method_navigation_guard"
            android:textIsSelectable="false"
            android:textSize="18sp"
            app:layout_constraintRight_toRightOf="@+id/textView12"
            app:layout_constraintTop_toBottomOf="@+id/textView12" />

        <Spinner
            android:id="@+id/editTextCatalog"
            android:layout_width="180dp"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:background="#F8BBD0"
            android:dropDownWidth="match_parent"
            android:ems="10"
            android:inputType="textPersonName"
            android:popupBackground="#F8BBD0"
            android:selectAllOnFocus="false"
            android:tag="3"
            android:textDirection="rtl"
            android:textSize="14sp"
            app:layout_constraintRight_toLeftOf="@+id/textView2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="85dp"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:background="#EA80FC"
            android:elegantTextHeight="false"
            android:paddingEnd="3dp"
            android:text="תאור"
            android:textColor="@color/abc_input_method_navigation_guard"
            android:textIsSelectable="false"
            android:textSize="18sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/textView7"
            app:layout_constraintRight_toRightOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1" />

        <EditText
            android:id="@+id/editTextDescription"
            android:layout_width="180dp"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:background="#F8BBD0"
            android:ems="10"
            android:inputType="text"
            android:tag="2"
            android:textSize="14sp"
            app:layout_constraintRight_toLeftOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/editTextCatNo"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="85dp"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:background="#EA80FC"
            android:elegantTextHeight="false"
            android:elevation="0dp"
            android:paddingEnd="3dp"
            android:text="קטגוריה"
            android:textColor="@color/abc_input_method_navigation_guard"
            android:textIsSelectable="false"
            android:textSize="18sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="85dp"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:background="#EA80FC"
            android:elegantTextHeight="false"
            android:gravity="end"
            android:paddingEnd="3dp"
            android:text="(V)מתח"
            android:textAlignment="viewEnd"
            android:textColor="@color/abc_input_method_navigation_guard"
            android:textIsSelectable="false"
            android:textSize="18sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/textView2"
            app:layout_constraintRight_toRightOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1" />

        <Button
            android:id="@+id/buttonReset"
            android:layout_width="88dp"
            android:layout_height="48dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_selector"
            android:soundEffectsEnabled="true"
            android:text="איפוס"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/buttonSearch"
            app:layout_constraintHorizontal_bias="0.404"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/buttonSearch"
            app:layout_constraintTop_toBottomOf="@+id/textView13"
            app:layout_constraintVertical_bias="1.0"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1" />

        <EditText
            android:id="@+id/editTextCatNo"
            android:layout_width="180dp"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:background="#F8BBD0"
            android:ems="10"
            android:inputType="text"
            android:tag="1"
            android:textSize="14sp"
            app:layout_constraintRight_toLeftOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/editTextCatalog"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1" />

        <EditText
            android:id="@+id/editTextPower"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:background="#F8BBD0"
            android:duplicateParentState="false"
            android:elegantTextHeight="true"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="14sp"
            app:layout_constraintRight_toLeftOf="@+id/textView5"
            app:layout_constraintTop_toTopOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="85dp"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:background="#EA80FC"
            android:elegantTextHeight="false"
            android:paddingEnd="3dp"
            android:text="מקט"
            android:textColor="@color/abc_input_method_navigation_guard"
            android:textIsSelectable="false"
            android:textSize="18sp"
            app:layout_constraintRight_toRightOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="85dp"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:background="#EA80FC"
            android:elegantTextHeight="false"
            android:gravity="end"
            android:paddingEnd="3dp"
            android:text="(A)זרם"
            android:textAlignment="viewEnd"
            android:textColor="@color/abc_input_method_navigation_guard"
            android:textIsSelectable="false"
            android:textSize="18sp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="@+id/textView3"
            app:layout_constraintRight_toRightOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1" />

        <TextView
            android:id="@+id/txtInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center_horizontal"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="30sp"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonSearch"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView" />

        <EditText
            android:id="@+id/editTextCurrent"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:background="#F8BBD0"
            android:ems="10"
            android:inputType="text"
            android:tag="5"
            android:textSize="14sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/editTextVoltage"
            app:layout_constraintRight_toRightOf="@+id/editTextVoltage"
            app:layout_constraintTop_toBottomOf="@+id/editTextVoltage"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1" />

        <EditText
            android:id="@+id/editTextVoltage"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:background="#F8BBD0"
            android:ems="10"
            android:inputType="textPersonName"
            android:tag="4"
            android:textSize="14sp"
            app:layout_constraintRight_toLeftOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/editTextDescription"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="85dp"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:background="#EA80FC"
            android:elegantTextHeight="false"
            android:gravity="end"
            android:paddingEnd="3dp"
            android:text="(W)הספק"
            android:textAlignment="viewEnd"
            android:textColor="@color/abc_input_method_navigation_guard"
            android:textIsSelectable="false"
            android:textSize="18sp"
            app:layout_constraintLeft_toRightOf="@+id/editTextVoltage"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <Button
            android:id="@+id/buttonSearch"
            style="@android:style/Widget.Button.Toggle"
            android:layout_width="88dp"
            android:layout_height="48dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_selector"
            android:singleLine="false"
            android:soundEffectsEnabled="true"
            android:text="חיפוש"
            android:textSize="18sp"
            app:layout_constraintHorizontal_bias="0.92"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView13"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="96dp"
            android:background="@drawable/logo"
            android:layout_marginRight="53dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="53dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            android:layout_marginStart="53dp"
            android:layout_marginEnd="53dp"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.78" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="@android:color/holo_red_dark"
            android:progressBackgroundTint="@android:color/holo_red_dark"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.46"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.13"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintTop_creator="1" />

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="@android:color/holo_red_dark"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/progressBar"
            app:layout_constraintLeft_toLeftOf="@+id/progressBar"
            app:layout_constraintRight_toRightOf="@+id/progressBar"
            app:layout_constraintTop_toTopOf="@+id/progressBar" />

        <TextView
            android:id="@+id/textViewCR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:clickable="true"
            android:text="© Uri Greenberg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <Button
            android:id="@+id/buttonCat"
            android:layout_width="68dp"
            android:layout_height="86dp"
            android:background="@drawable/orange"
            android:text="קטלוגים"
            app:layout_constraintBottom_toTopOf="@+id/editTextVa"
            app:layout_constraintEnd_toStartOf="@+id/editTextCatNo"
            app:layout_constraintStart_toStartOf="@+id/editTextVa"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonOrder"
            android:layout_width="109dp"
            android:layout_height="44dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/order_selector"
            android:text="הזמנה"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/buttonSearch"
            app:layout_constraintStart_toStartOf="@+id/buttonReset"
            app:layout_constraintTop_toBottomOf="@+id/buttonReset" />

    </android.support.constraint.ConstraintLayout>
    <!-- android:layout_gravity="start" tells DrawerLayout to treat
         this as a sliding drawer on the left side for left-to-right
         languages and on the right side for right-to-left languages.
         If you're not building against API 17 or higher, use
         android:layout_gravity="left" instead. -->
    <!-- The drawer is given a fixed width in dp and extends the full height of
         the container. -->
    <!--<fragment
        android:id="@+id/navigation_drawer"
        android:layout_width="@dimen/navigation_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:name="com.uri.part_search.NavigationDrawerFragment"
        tools:layout="@layout/fragment_navigation_drawer" />-->

</android.support.v4.widget.DrawerLayout>
